{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@hm-css/*": ["src/css/*"],
      "@hm-dto/*": ["src/dto/*"],
      "@hm-utils/*": ["src/utils/*"],
      "@hm-stores/*": ["src/stores/*"],
      "@hm-modules/*": ["src/modules/*"],
      "@hm-components/*": ["src/components/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
